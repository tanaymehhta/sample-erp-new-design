// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Deal {
  id               String   @id @default(cuid())
  date             String // DD-MM-YYYY format
  saleParty        String // Customer name
  quantitySold     Float // kg
  saleRate         Float // ₹/kg  
  deliveryTerms    String // delivered/pickup
  productCode      String // Product code
  grade            String // Product grade
  company          String // Company name
  specificGrade    String // Detailed grade
  saleSource       String // "New Material" or "From Inventory"
  purchaseParty    String // Supplier name (for backward compatibility)
  purchaseQuantity Float // kg (for backward compatibility)
  purchaseRate     Float // ₹/kg (for backward compatibility)
  saleComments     String? // Optional
  purchaseComments String? // Optional
  finalComments    String? // Optional
  warehouse        String? // Location
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  // Multi-source relationship
  sources DealSource[]

  @@index([date])
  @@index([saleParty])
  @@index([productCode])
  @@index([createdAt])
  @@map("deals")
}

model DealSource {
  id             String    @id @default(cuid())
  dealId         String
  deal           Deal      @relation(fields: [dealId], references: [id], onDelete: Cascade)
  inventoryId    String
  inventory      Inventory @relation(fields: [inventoryId], references: [id])
  quantityUsed   Float // Amount used from this source
  costPerKg      Float // Rate from this inventory item
  supplierName   String // Supplier for this source
  selectionOrder Int // Order in which items were selected
  createdAt      DateTime  @default(now())

  @@index([dealId])
  @@index([inventoryId])
  @@map("deal_sources")
}

model Product {
  id            String @id @default(cuid())
  productCode   String @unique
  grade         String
  company       String
  specificGrade String
  source        String @default("system") // auto-added timestamp

  @@map("products")
}

model SaleParty {
  id            String  @id @default(cuid())
  partyName     String  @unique
  contactPerson String?
  phone         String?
  email         String?
  address       String?

  @@map("sale_parties")
}

model PurchaseParty {
  id            String  @id @default(cuid())
  partyName     String  @unique
  contactPerson String?
  phone         String?
  email         String?
  address       String?

  @@map("purchase_parties")
}

model Inventory {
  id            String   @id @default(cuid())
  productCode   String
  grade         String
  company       String
  specificGrade String
  quantity      Float // Available quantity
  rate          Float // Purchase rate
  purchaseParty String // Where it was bought from
  dateAdded     String // Date added
  createdAt     DateTime @default(now())

  // Multi-source relationship
  dealSources DealSource[]

  @@map("inventory")
}
